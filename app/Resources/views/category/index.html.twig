{% extends 'back.html.twig' %}

{% block content %}
    <h1>Liste des Categories</h1>
  
       <div  align="right">
<a class="btn btn-success" href="{{ path('admin_category_new') }}"><i class="fa fa-plus"></i> Nouvelle Categorie</a>
        </div>
 
  <br>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
               
                <th>Libelle</th>
                
                <th>Slug</th>
                <th>Description</th>
                <th style="width:10%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                
                <td nowrap="nowrap">{{ category.libelle }}</td>
               
                <td nowrap="nowrap">{{ category.slug }}</td>
                 <td>{{ category.description }}</td>
                <td align="right">
                    
                            <a class="btn btn-info" href="{{ path('admin_category_show', { 'id': category.id }) }}"><i class="fa fa-search"></i></a>
                      
                            <a class="btn btn-warning" href="{{ path('admin_category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
{% block breadcrumb %}
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
  <li class="breadcrumb-item active">Liste categorie</li>
</ol>

{% endblock %}

