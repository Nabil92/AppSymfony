{% extends 'back.html.twig' %}

{% block content %}
    <br>
    <div class="card border-primary" >
  <div class="card-header">{{ category.libelle }}</div>
  <div class="card-body">
    <h4 class="card-title">{{ category.slug }}</h4>
  
    <p class="card-text">{{ category.description }} </p>
    <small>
       crée le :{{ category.createAt|date('Y-m-d H:i:s') }}
       Modifiée le : {{ category.updateAt|date('Y-m-d H:i:s') }}
   </small>
  </div>
</div>
   <br>
     <a class="btn btn-danger" href="{{ path('admin_category_edit', { 'id': category.id }) }}">Editer</a>
<a class="btn btn-secondary" href="{{ path('admin_category_index') }}">Retour</a>
        
           
      
{% endblock %}
