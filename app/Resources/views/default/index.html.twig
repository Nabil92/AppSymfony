{% extends 'base.html.twig' %}

{% block content %}
    <section class="hero is-medium is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Maitrisez Symfony pour vos projet
      </h1>
      <h2 class="subtitle">
        Primary bold subtitle
      </h2>
    </div>
  </div>
</section>
  <br>
<div class="container">
    <div class="columns">
      
      {% for post in posts %}
           <div class="card column">
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <a href="{{path('showblog',{'id':post.id })}}"><img src="{{ asset('uploads/posts/'~ post.image)}}" alt="Placeholder image"></a>
                    </figure>
                  </div>
                  <div class="card-content">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-48x48">
                          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                        </figure>
                      </div>
                      <div class="media-content">
                        <p class="title is-4"><a href="{{path('showblog',{'id':post.id })}}"></a>{{ post.title}}</p>
                        <p class="subtitle is-6">@johnsmith</p>
                      </div>
                    </div>

                    <div class="content ">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                      Phasellus nec iaculis mauris. <a>@bulmaio</a>.
                      <a href="#">#css</a> <a href="#">#responsive</a>
                      <br>
                      <time datetime="2016-1-1">{{ post.datepublish | date() }}</time>
                    </div>
                  </div>
           </div>  

         {% endfor %}
        
         
    

   </div>
   
</div>
{% endblock %}

